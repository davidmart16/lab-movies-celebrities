

<div class="row justify-content-center">

    <div class="col-md-4">
        <h2>Edita la pelicula</h2>
        <form action="/movies/details/{{id}}/edit" method="POST">
            <div class="form-group">
                <label for="title">Titulo</label>
                <input type="text" class="form-control" id="title" name="title" value="{{title}}">
            </div>
            <div class="form-group">
                <label for="genre">Genero</label>
                <input type="text" class="form-control" id="genre" name="genre" value="{{genre}}">
            </div>
            <div class="form-group">
                <label for="plot">Trama</label>
                <input type="text" class="form-control" id="plot" name="plot" value="{{plot}}">
            </div>

            <div class="form-group">
                <label for="celebrities">Celebridades --</label>
                <select name="cast" id="celebrities" multiple>
                    {{#each celebrities}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}

                </select>
            </div>

            <button type="submit" class="btn btn-danger">Guardar edicion de la pelicula</button>

        </form>

        <hr>
        <a href="/" class="btn btn-dark">Volver</a>

    </div>
</div>
