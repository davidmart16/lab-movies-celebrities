
<h2>Detalles de {{title}}</h2>
<hr>
<div class="row">
    <div class="col-md-6">
        <div class="row ">
            <div class="col-md">
            <p> Titulo: {{title}}</p>            
            <p>Genero: {{genre}}</p>
            <p>Trama: {{plot}}</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        {{#each cast}}
        <ul>
            <li>Nombre: {{name}}</li>
            <li>Trabajo: {{occupation}}</li> 
            <li>Frase tipica: ({{catchPhrase}})</li>
        </ul>
        <hr>
        {{/each}}
    </div>

</div>

<hr>

